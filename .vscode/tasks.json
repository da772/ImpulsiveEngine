    "version": "2.0.0",
    "tasks": [
        {
            "label": "XCode Debug Run",
            "type": "shell",
            "command": "xcodebuild -workspace GEngine.xcworkspace -scheme Sandbox -configuration Debug && cd ./Bin/Debug-macosx-x86_64/Sandbox && ./Sandbox",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "XCode Release Run",
            "type": "shell",
            "command": "xcodebuild -workspace GEngine.xcworkspace -scheme Sandbox -configuration Release && cd ./Bin/Release-macosx-x86_64/Sandbox && ./Sandbox",
            "problemMatcher": []
        },
        {
            "label": "XCode Dist Run",
            "type": "shell",
            "command": "xcodebuild -workspace GEngine.xcworkspace -scheme Sandbox -configuration Dist && cd ./Bin/Dist-macosx-x86_64/Sandbox && ./Sandbox",
            "problemMatcher": []
        },
        {
            "label": "XCode Refresh Project Mac",
            "type": "shell",
            "command": "./Scripts/GenerateProjectXC4.command",
            "problemMatcher": []
        },
        {
            "label": "XCode Refresh Project iOS",
            "type": "shell",
            "command": "./Scripts/GenerateProjectXC4_iOS.command",
            "problemMatcher": []
        },
    ]
}